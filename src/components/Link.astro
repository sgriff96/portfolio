---
import type { ILink } from "../types/Link";
interface Props extends ILink {}
const { href, label } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="underline decoration-dotted underline-offset-4 italic text-sky-300 text-sm hover:text-sky-400 transition-all duration-300 ease-in-out"
  >{label}</a
>
